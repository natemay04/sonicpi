use_synth :piano
m = 1

sleep 4
live_loop :lol do
  1.times do
    64.times do
      play (m)
      sleep 0.25
      m = m +1
    end
  end
  stop
end

define :lilsleep do |q1|
  play q1
  sleep 0.25
end

define :medsleep do |e1|
  play e1
  sleep 0.5
end

define :bigsleep do |r1|
  play r1
  sleep 1
end

define :bigbigsleep do |b1, b2, b3|
  play b1
  play b2
  play b3
  sleep 1.5
end

define :highnotes do
  9.times do
    bigbigsleep :e4, :b4, :g4
    medsleep :e5
    medsleep :c5
    lilsleep :b4
    lilsleep :a4
    lilsleep :a4
    medsleep :a4
    lilsleep :b4
    medsleep :b4
    bigsleep :c5
    medsleep :e5
    medsleep :c5
    lilsleep :b4
    lilsleep :a4
    lilsleep :a4
    medsleep :a4
    lilsleep :f4
  end
  stop
end

sleep 16
live_loop :define do
  highnotes
end

bassnotes = ["c2", "c3", "c2", "c3", "b1", "b2", "b1", "b2"]
