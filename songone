use_bpm 120

#30sec

live_loop :secondary do
  with_fx :autotuner do
    6.times do
      sample :bd_sone
      sleep 2
    end
    stop
  end
end

use_synth :piano
live_loop :fadein do
  s = 1
  1.times do
    40.times do
      play (s)
      sleep 0.2
      s = s +1
    end
    4.times do
      play (s)
      sleep 1
      s = s+1
    end
  end
  stop
end

define :notes do |f1, f2|
  play f1
  play f2
  sleep 1
end
thirdline = ["e4", "g"]
fourthline = ["e4", "c"]

define :bruno do
  use_synth :piano
  use_synth_defaults amp: 2
  5.times do
    4.times do
      notes :f4, :a
    end
    4.times do
      notes :d4, :g
    end
    4.times do
      play (thirdline)
      sleep 1
    end
    4.times do
      play (fourthline)
      sleep 1
    end
  end
  stop
end

sleep 12
live_loop :define do
  bruno
end

live_loop :eightoeight do
  20.times do
    sample :bd_808, amp: 825
    sleep 4
  end
  stop
end


sleep 16
live_loop :secondaryy do
  with_fx :autotuner do
    32.times do
      sample :bd_sone, amp: 2
      sleep 2
    end
    stop
  end
end
